<div style="margin: 100px 0 0 0;">
    <div class="row">
        <div class="col">
            <p style="float: right;">
                <span>HOLA {{persona}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">Salir <i class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-7" style="margin: 10px 0 5px 15px ;">
        <h2>Productos</h2>
    </div>
    <div class="col-5 text-right" style="margin: 10px 0 5px -60px;">
        <a href="" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{producto}}</td>
                    <td>{{precio}}</td>
                    <td class="text-end">
                        <a href="" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/productos/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>