<div class="container" style="margin: 60px 10px 5px 5px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h5>Modificar producto</h5>
            <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{producto.id}}" name="id">
                <div class="mb-3">
                    <label for="">Producto</label>
                    <input type="text" class="form-control" name="producto" value="{{producto.producto}}">
                </div>
                <div class="mb-3">
                    <label for="">Precio</label>
                    <input type="text" class="form-control" name="precio" value="{{producto.precio}}">
                </div>
                <div class="form-group">
                    <p>
                     <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>   
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                    
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>