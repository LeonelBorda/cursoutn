<div style="margin: 100px 0 0 0;">
    <div class="row">
        <div class="col">
            <p style="float: right;">
                <span>HOLA {{persona}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">Salir <i class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-7" style="margin: 10px 0 5px 15px ;">
        <h2>Productos</h2>
    </div>
    <div class="col-2 text-right" style="margin: 10px 0 5px -60px;">
        <a href="/admin/productos/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
    </div>
    <div class="col-3 text-right" style="margin: 10px 0 5px -60px;">
        <form class="d-flex form-inline" role="search" action="/admin/productos" method="get">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}
                value="{{q}}" {{/if}}>
            <button class="btn btn-outline-success" type="submit"><i class="fa fa-search"
                    aria-hidden="true"></i></button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Precio</th>
                    <th scope="col" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{producto}}</td>
                    <td>{{{imagen}}}</td>
                    <td>{{precio}}</td>
                    <td class="text-end">
                        <a href="/admin/productos/modificar/{{id}}" class="btn btn-secondary"><i
                                class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/productos/eliminar/{{id}}" class="btn btn-secondary"><i
                                class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        {{#if is_search}}
        {{#unless novedades.length}}
        No se encontr√≥ resultado para "<b>{{q}}</b>"
        {{/unless}}
        {{/if}}

    </div>
</div>